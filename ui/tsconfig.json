{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es2017",
      "dom",
      "dom.iterable",
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, 
    "jsx": "react",
    "experimentalDecorators": true
  },
  "include": [
    "src",
    "typings",
  ]
}
